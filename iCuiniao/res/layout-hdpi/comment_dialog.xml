<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<EditText android:id="@+id/comment_dialog"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:minLines="3" android:textSize="18dp" android:hint="请输入内容"
		android:maxLength="100">
	</EditText>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="right"
		android:orientation="horizontal">
		<TextView android:id="@+id/input_num" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="您还可输入100字"
			android:textColor="#ff7c7c7c" android:textSize="16dp">
		</TextView>
	</LinearLayout>

</LinearLayout>
