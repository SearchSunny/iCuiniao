<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout 
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/mainpagebg">
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<com.cmmobi.icuiniao.ui.view.MainMenu
			android:id="@+id/mainmenu" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/commoditybg">
		</com.cmmobi.icuiniao.ui.view.MainMenu>

		<RelativeLayout android:id="@+id/friendpage"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:background="@drawable/mainpagebg">
			<RelativeLayout android:id="@+id/lfriendsearchbar"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_alignParentBottom="true" android:orientation="horizontal"
				android:paddingLeft="10dp" android:paddingRight="10dp"
				android:paddingTop="10dp" android:paddingBottom="10dp"
				android:background="#7f000000">

				<!--
					LinearLayout android:id="@+id/laddfriendbtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="20dp"
					android:paddingRight="20dp" android:layout_alignParentRight="true"
					android:layout_centerVertical="true"> <Button
					android:id="@+id/addfriendbtn" android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/searchfriend_addbtn_0"> </Button>
					</LinearLayout
				-->
				<Button android:id="@+id/addfriendbtn" android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:background="@drawable/searchfriend_addbtn_0">
				</Button>
				<Button android:id="@+id/friendsearchbtn"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:background="@drawable/searchfriend_inputbg"
					android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/addfriendbtn"
					android:layout_centerVertical="true">
				</Button>
			</RelativeLayout>

			<LinearLayout android:id="@+id/lfriendpage"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="vertical" android:layout_alignParentTop="true"
				android:layout_above="@id/lfriendsearchbar">
			</LinearLayout>

		</RelativeLayout>
	</FrameLayout>
</LinearLayout>
		<RelativeLayout android:id="@+id/rprogress"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ProgressBar android:id="@+id/loading"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:indeterminateDrawable="@drawable/loading"
			android:layout_centerInParent="true" android:visibility="invisible">
		</ProgressBar>
	</RelativeLayout>
	</FrameLayout>
