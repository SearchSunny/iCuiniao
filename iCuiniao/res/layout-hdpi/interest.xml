<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/mainpagebg" android:orientation="vertical">

	<RelativeLayout 
		android:id="@+id/rtitlebar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/commoditybg_line" android:orientation="horizontal"
		android:padding="10dp" 
		android:layout_alignParentTop="true">
		
		<Button android:id="@+id/titlebar_backbutton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			android:background="@drawable/titlebar_backbutton_0">
		</Button>

		<Button android:id="@+id/titlebar_menubutton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:background="@drawable/titlebar_menubutton_0"
			android:visibility="invisible">
		</Button>

		<LinearLayout android:id="@+id/titlebar_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:layout_centerVertical="true"
			android:gravity="center_vertical|center_horizontal"
			android:layout_toRightOf="@id/titlebar_backbutton"
			android:layout_toLeftOf="@id/titlebar_menubutton">
			<TextView android:id="@+id/titlebar_titletext"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="兴趣" android:textColor="#ccffffff" android:textSize="16dp"
				android:paddingRight="5dp" android:singleLine="true">
			</TextView>
		</LinearLayout>
	</RelativeLayout>

	<ScrollView 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:scrollbars="none">
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:padding="5dp" android:layout_below="@id/rtitlebar"
			android:layout_gravity="center">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line11" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 美容/化装 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line12" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 服饰/时尚 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line21" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 美食/厨艺 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line22" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 图书/影视/音乐 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line31" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 家具/装饰 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line32" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 运动/健身 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line41" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 数码/家电 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line42" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 亲子/育儿 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line51" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 旅行 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line52" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 动漫 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line53" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 汽车 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<LinearLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingLeft="8dp"
					android:paddingRight="8dp" android:paddingTop="5dp"
					android:paddingBottom="5dp">
					<Button android:id="@+id/line61" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/local_btn"
						android:text=" 宠物/园艺 " android:textColor="#ffffffff"
						android:textSize="16dp">
					</Button>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="5dp"
				android:orientation="horizontal" android:gravity="center">
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="10dp">
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:paddingRight="10dp"
						android:paddingTop="5dp" android:paddingBottom="5dp"
						android:layout_alignParentLeft="true" android:id="@+id/realname"
						android:layout_centerVertical="true">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="其它"
							android:textColor="#cc000000" android:textSize="20dp">
						</TextView>
					</LinearLayout>
					<EditText android:id="@+id/others_input"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:layout_toRightOf="@id/realname" android:hint="多个标签请用空格或逗号分隔"
						android:textSize="16dp" android:background="@drawable/poplike_inputbg"
						android:singleLine="true" android:maxLength="100"
						android:layout_centerVertical="true">
					</EditText>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
