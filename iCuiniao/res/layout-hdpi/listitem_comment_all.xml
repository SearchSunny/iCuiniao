<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@drawable/list_item_color_bg">
	
	<LinearLayout android:id="@+id/lListItem_c"
		android:layout_width="fill_parent" android:layout_height="wrap_content"		
		android:orientation="horizontal" android:paddingLeft="10dp"
		android:paddingRight="10dp" android:paddingTop="10dp"
		android:paddingBottom="10dp">

		<LinearLayout android:id="@+id/lListItem_c_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingRight="10dp">
			<ImageView android:id="@+id/listItem_c_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/usericonbg">
			</ImageView>
		</LinearLayout>

		<LinearLayout android:id="@+id/linearComment"
		android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:clickable="false"
			android:focusable="false">

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:paddingBottom="6dp">
				<TextView android:id="@+id/listItem_c_time"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="09.12 12:22" android:textColor="#ff7f7c7c"
					android:textSize="14dp" android:layout_alignParentRight="true">
				</TextView>
				<TextView android:id="@+id/listItem_c_name"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="aa" android:textColor="#ff536cdc" android:textSize="16dp"
					android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_time">
				</TextView>
			</RelativeLayout>

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<ImageView android:id="@+id/listItem_c_commentIcon"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/commenticon_u"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true">
				</ImageView>

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingRight="5dp"
					android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_commentIcon">
					<TextView android:id="@+id/listItem_c_comment"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="" android:textColor="#cc000000" android:textSize="15dp">
					</TextView>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
