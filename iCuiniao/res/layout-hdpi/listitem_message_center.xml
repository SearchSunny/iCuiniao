<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	>

	<RelativeLayout android:id="@+id/lListItem_c"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:paddingLeft="10dp"
		android:paddingRight="10dp" android:paddingTop="10dp"
		android:paddingBottom="10dp">

		
		<LinearLayout android:id="@+id/lListItem_c_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:paddingTop="2dp" android:paddingBottom="2dp">
			<ImageView android:id="@+id/listItem_c_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/usericonbg">
			</ImageView>
		</LinearLayout>

		<LinearLayout android:id="@+id/linearMainbody"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_toRightOf="@id/lListItem_c_icon"
			android:layout_alignTop="@id/lListItem_c_icon">

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="4dp">
				<TextView android:id="@+id/listItem_c_time"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="09.12 12:22" android:textColor="#ff7f7c7c"
					android:textSize="14dp" android:layout_alignParentRight="true">
				</TextView>
				<TextView android:id="@+id/listItem_c_name"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="葛尔丹" android:textColor="#ff748DBE" android:textSize="16dp"
					android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_time">
				</TextView>
			</RelativeLayout>

			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingRight="5dp"
					android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_commentIcon">
					<TextView android:id="@+id/listItem_c_comment"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="深刻的房间的控件反馈束带结发玩儿反馈说对方空间的空间都是是对方即可对方即可。"
						android:textColor="#cc000000" android:textSize="15dp"
						android:maxLength="140">
					</TextView>
				</LinearLayout>
			</RelativeLayout>
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/listItem_c_reply"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="对方的回复：" android:background="@drawable/commentmsgbox"
					android:textColor="#cc000000" android:textSize="15dp"
					android:singleLine="true"
					android:gravity="center_vertical" >
				</TextView>
			</RelativeLayout>
		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
