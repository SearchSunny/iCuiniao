<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<LinearLayout android:id="@+id/lListItem_c"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/listitem_friendbg_0"
		android:orientation="horizontal" android:paddingLeft="10dp"
		android:paddingRight="10dp" android:paddingTop="10dp"
		android:paddingBottom="10dp">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/point" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true" android:background="@drawable/setting_point"
				android:layout_centerVertical="true" android:visibility="invisible">
			</ImageView>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/point" android:paddingRight="10dp">
				<LinearLayout android:id="@+id/lListItem_c_icon"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:paddingRight="10dp">
					<FrameLayout android:layout_width="wrap_content"
							android:layout_height="wrap_content">
					
					<ImageView android:id="@+id/listItem_c_icon"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/usericonbg">
					</ImageView>
					<ImageView android:id="@+id/listItem_c_dian"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/dian" android:layout_marginLeft="26dp">
					</ImageView>
					</FrameLayout>
					
				</LinearLayout>

				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:orientation="vertical"
					android:id="@+id/linearComment">

					<RelativeLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="horizontal"
						android:paddingBottom="6dp">
						<TextView android:id="@+id/listItem_c_time"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="2012" android:textColor="#ff7f7c7c"
							android:textSize="14dp" android:layout_alignParentRight="true">
						</TextView>
						<TextView android:id="@+id/listItem_c_name"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:text="" android:textColor="#cc000000" android:textSize="16dp"
							android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_time"
							android:ellipsize="end" android:maxLength="7">
						</TextView>
					</RelativeLayout>

					<RelativeLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="horizontal">
						<ImageView android:id="@+id/listItem_c_commentIcon"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:background="@drawable/commenticon_u"
							android:layout_alignParentRight="true"
							android:layout_centerVertical="true" android:visibility="invisible">
						</ImageView>
						<TextView android:id="@+id/listItem_c_comment"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:text="" android:textColor="#ff7f7c7c" android:textSize="15dp"
							android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/listItem_c_commentIcon"
							android:ellipsize="end" android:singleLine="true">
						</TextView>
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>

	</LinearLayout>

</LinearLayout>
