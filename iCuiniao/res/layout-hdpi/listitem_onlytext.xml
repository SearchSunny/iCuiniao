<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="horizontal">

	<RelativeLayout android:id="@+id/rlistitem_friend"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/listitem_friendbg_0">

		<LinearLayout android:id="@+id/llistitem_friend_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:paddingTop="10dp" android:paddingBottom="10dp"
			android:layout_alignParentLeft="true">
			<ImageView android:id="@+id/listitem_friend_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/usericonbg">
			</ImageView>
		</LinearLayout>

		<TextView android:id="@+id/listitem_friend_name"
			android:layout_width="120dp" android:layout_height="wrap_content"
			android:text="" android:textColor="#cc000000" android:textSize="20dp"
			android:layout_toRightOf="@id/llistitem_friend_icon"
			android:layout_centerVertical="true" android:singleLine="true">
		</TextView>

		<LinearLayout android:id="@+id/llistitem_friend_state"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:paddingLeft="60dp" android:paddingRight="10dp"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:gravity="center">
			<Button android:id="@+id/listitem_friend_state"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="" android:textColor="#ff7c7c7c" android:textSize="16dp"
				android:background="@color/transparent_all">
			</Button>
		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
