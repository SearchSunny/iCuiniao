<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">

		<LinearLayout 
          	android:id="@+id/cuiniaoList_back"
          	android:layout_width="fill_parent" 
          	android:layout_height="wrap_content"
		  	android:layout_gravity="bottom" 
		  	android:background="@drawable/share_bg"
		  	android:orientation="vertical"
		  	android:padding="10dip">
			<RelativeLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    >
				<Button 
					android:id="@+id/titlebar_backbutton"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" 
					android:background="@drawable/titlebar_backbutton_0"/>
				<TextView android:id="@+id/cuiniaoList_title" 
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:text="操作条设置"
					android:textColor="#ffffffff" 
					android:textSize="20dip"
					android:layout_gravity="center" 
					android:gravity="center_horizontal"
					android:paddingBottom="10dip"/>
			</RelativeLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:paddingTop="20dip"
			    android:gravity="center_horizontal"
			    android:layout_gravity="center_horizontal"
			    >
			    <RelativeLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        >
			        <Button 
			            android:id="@+id/gestureModeButton"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/gesturemode_f"
			            />
			        <Button 
			            android:id="@+id/buttonModeButton"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/buttonmode"
			            android:layout_toRightOf="@id/gestureModeButton"
			            />
			    </RelativeLayout>
			    <RelativeLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingTop="20dip"
			        android:paddingBottom="20dip"
			        >
			        <Button 
			            android:id="@+id/leftHandButton"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/lefthand"
			            />
			        <Button 
			            android:id="@+id/rightHandButton"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/righthand_f"
			            android:layout_toRightOf="@id/leftHandButton"
			            />
			    </RelativeLayout>			    
			</LinearLayout>
      	</LinearLayout> 
</LinearLayout>