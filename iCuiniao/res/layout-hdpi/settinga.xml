<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="@drawable/mainpagebg" 
		android:orientation="vertical">
	
		<FrameLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
			<com.cmmobi.icuiniao.ui.view.MainMenu
				android:id="@+id/mainmenu" 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" 
				android:background="@drawable/commoditybg">
			</com.cmmobi.icuiniao.ui.view.MainMenu>
			<LinearLayout 
				android:id="@+id/settingpage"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:orientation="vertical" 
				android:background="@drawable/mainpagebg">
			
				<RelativeLayout 
					android:id="@+id/rtitlebar"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:background="@drawable/titlebarbg"
					android:orientation="horizontal" 
					android:layout_alignParentTop="true"
					android:paddingLeft="10dp" 
					android:paddingRight="10dp">
					<Button android:id="@+id/titlebar_leftmenu"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/titlebar_menubutton_0"
						android:layout_gravity="center_vertical" 
						android:visibility="invisible">
					</Button>					
					<Button 
						android:id="@+id/titlebar_leftmenu"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:background="@drawable/titlebar_menubutton_0"
						android:layout_gravity="center_vertical" 
						android:visibility="invisible">
					</Button>
					
					<Button 
						android:id="@+id/titlebar_backbutton"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true" 
						android:background="@drawable/titlebar_backbutton_0"
						android:visibility="invisible">
					</Button>

					<Button 
						android:id="@+id/titlebar_menubutton"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true" 
						android:background="@drawable/titlebar_menubutton_0">
					</Button>

					<ImageView android:id="@+id/messageImageId" android:layout_width="wrap_content" 
						android:layout_height="wrap_content" android:background="@drawable/dian"
						android:layout_toLeftOf="@id/titlebar_menubutton" android:layout_alignParentRight="true" 
						android:layout_marginTop="8dip" android:layout_marginRight="2dip"
						android:visibility="gone"></ImageView>
					<LinearLayout 
						android:id="@+id/titlebar_title"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true" 
						android:gravity="center_vertical|center_horizontal"
						android:layout_toRightOf="@id/titlebar_backbutton"
						android:layout_toLeftOf="@id/titlebar_menubutton">
						
						<TextView 
							android:id="@+id/titlebar_titletext"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:text="设置" 
							android:textColor="#ccffffff" android:textSize="16dp"
							android:paddingRight="5dp" android:singleLine="true">
						</TextView>
					</LinearLayout>
				</RelativeLayout>
				<ScrollView 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:scrollbars="none">
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" 
						android:orientation="vertical">
						<!-- 顶部配置 -->
						<LinearLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:orientation="vertical"
							android:paddingTop="20dp"
							android:paddingLeft="10dp"
		    				android:paddingRight="10dp">	
							<LinearLayout 
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:orientation="vertical"
								android:background="@drawable/poplike_inputbg">
								<RelativeLayout
									android:id="@+id/personalSetting"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="个人设置"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<ImageView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/setting_point"
										android:layout_centerVertical="true">
									</ImageView>
								</RelativeLayout>
								<RelativeLayout
									android:id="@+id/myPage"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="我的主页"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<ImageView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/setting_point"
										android:layout_centerVertical="true">
									</ImageView>
								</RelativeLayout>
								<RelativeLayout
									android:id="@+id/sajiao"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="撒娇对象管理"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<ImageView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/setting_point"
										android:layout_centerVertical="true">
									</ImageView>
								</RelativeLayout>	
								<RelativeLayout
									android:id="@+id/takeAddress"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="收货地址管理"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<ImageView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/setting_point"
										android:layout_centerVertical="true">
									</ImageView>
								</RelativeLayout>	
							</LinearLayout>												
						</LinearLayout>
						<!-- 中部配置 -->
						<LinearLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:orientation="vertical"
							android:paddingTop="20dp"
							android:paddingLeft="10dp"
		    				android:paddingRight="10dp">	
							<LinearLayout 
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:orientation="vertical"
								android:background="@drawable/poplike_inputbg">
								<RelativeLayout
									android:id="@+id/feedback"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="用户反馈"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<ImageView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/setting_point"
										android:layout_centerVertical="true">
									</ImageView>
								</RelativeLayout>
								<RelativeLayout
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="通知提醒"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
	        						<com.cmmobi.icuiniao.ui.view.SlipButton
	            						android:id="@+id/notificationSlipButton"
	            						android:layout_width="70dip"
	            						android:layout_height="30dip"
	            						android:layout_alignParentRight="true" 
	            						android:layout_centerVertical="true"/>
								</RelativeLayout>												
							</LinearLayout>
						</LinearLayout>
						<!-- 底部配置 -->
						<LinearLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:orientation="vertical"
							android:paddingTop="20dp"
							android:paddingLeft="10dp"
		    				android:paddingRight="10dp">	
							<LinearLayout 
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:orientation="vertical"
								android:background="@drawable/poplike_inputbg">
								<RelativeLayout
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="12dp" 
									android:paddingBottom="12dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="清除缓存"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<Button 
										android:id="@+id/cacheButton"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/cache_btn_0"
										android:layout_centerVertical="true"/>
								</RelativeLayout>
								<RelativeLayout
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:background="@drawable/selectbg_line_0"
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="12dp" 
									android:paddingBottom="12dp">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="软件更新"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
									<Button 
										android:id="@+id/updateButton"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_alignParentRight="true" 
										android:background="@drawable/update_btn_0"
										android:layout_centerVertical="true"/>
								</RelativeLayout>													
							</LinearLayout>
						</LinearLayout>
						<!-- 版本号 -->
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:orientation="vertical"
							android:paddingTop="20dp"
							android:paddingLeft="10dp"
		    				android:paddingRight="10dp"
		    				android:paddingBottom="20dp">	
							<LinearLayout 
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:orientation="vertical"
								android:background="@drawable/poplike_inputbg">
								<RelativeLayout
									android:id="@+id/about"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content" 
									android:paddingLeft="10dp"
									android:paddingRight="10dp"
									android:paddingTop="15dp" 
									android:paddingBottom="15dp"
									android:background="@drawable/selectbg_line_0">
									<TextView 
										android:layout_width="wrap_content"
										android:layout_height="wrap_content" 
										android:text="关于"
										android:textColor="#cc000000" 
										android:textSize="20dp"
										android:layout_centerVertical="true"
										android:layout_alignParentLeft="true">
									</TextView>
								</RelativeLayout>													
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</ScrollView>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>
	<RelativeLayout android:id="@+id/rprogress"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ProgressBar android:id="@+id/loading"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:indeterminateDrawable="@drawable/loading"
			android:layout_centerInParent="true" android:visibility="invisible">
		</ProgressBar>
	</RelativeLayout>
</FrameLayout>