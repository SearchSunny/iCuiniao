<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<RelativeLayout android:id="@+id/rtitlebar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/titlebarbg" android:orientation="horizontal"
		android:paddingLeft="10dp" android:paddingRight="10dp">

		<LinearLayout android:id="@+id/ltitlebar_backbutton" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
			<Button android:id="@+id/titlebar_backbutton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/titlebar_backbutton1_0">
			</Button>
			<Button android:id="@+id/titlebar_leftmenu"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/titlebar_menubutton1_0"
				android:visibility="invisible">
			</Button>
		</LinearLayout>
		
		<LinearLayout android:id="@+id/ltitlebar_menubutton" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
			<Button android:id="@+id/titlebar_menubutton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/titlebar_menubutton1_0">
			</Button>
			<ImageView android:id="@+id/messageImageId" android:layout_width="wrap_content" 
						android:layout_height="wrap_content" android:background="@drawable/dian"
						android:layout_toLeftOf="@id/titlebar_menubutton" android:layout_alignParentRight="true" 
						android:layout_marginTop="6dip" android:layout_marginLeft="-14dip"
						android:visibility="gone"></ImageView>
		</LinearLayout>

		<LinearLayout android:id="@+id/titlebar_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:paddingTop="10dp"
			android:gravity="center_horizontal"
			android:layout_toRightOf="@id/ltitlebar_backbutton"
			android:layout_toLeftOf="@id/ltitlebar_menubutton">
			<TextView android:id="@+id/titlebar_titletext"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="" android:textColor="#ccffffff" android:textSize="16dp"
				android:paddingRight="5dp" android:singleLine="true">
			</TextView>
			<ImageView android:id="@+id/titlebar_titleimage"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/titlebar_sanjiao"
				android:layout_gravity="center_vertical">
			</ImageView>
		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
