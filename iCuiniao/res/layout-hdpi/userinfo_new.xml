<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/userPagelayout"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="#FFffffff" android:orientation="vertical">
		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:src="@drawable/titlebarfloatbg1"
			android:scaleType="fitXY" />
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#ffffffff">

			<ImageView android:id="@+id/iduserimg"
				android:layout_width="fill_parent" android:layout_height="320dp"
				android:scaleType="fitXY" 
				/>
				
	
			<RelativeLayout android:id="@+id/rlvcenterbar"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_alignBottom="@id/iduserimg">
				<LinearLayout android:id="@+id/linebtnRight"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="#99403d38" android:gravity="center"
					android:clickable="true" android:layout_alignParentRight="true"
					android:visibility="visible">
					<ImageView android:id="@+id/btnRight" android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						>
					</ImageView>
					
				</LinearLayout>

				<FrameLayout android:id="@+id/linebtnLeft"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="#99403d38" android:gravity="center"
					android:clickable="true" android:visibility="visible"
					android:layout_toLeftOf="@id/linebtnRight" android:layout_marginRight="1px">					
					<ImageView android:id="@+id/btnLeft" android:layout_width="wrap_content"
						android:layout_height="wrap_content"						
						>
					</ImageView>					
					<TextView 						
						android:id="@+id/friendCnt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						android:text="134" android:textSize="14dp"
						android:layout_gravity="bottom|center_horizontal"
						android:paddingBottom="7dp"/>
				</FrameLayout>


				<LinearLayout android:id="@+id/lineUserInfo"
					android:layout_toLeftOf="@id/linebtnLeft"
					android:layout_alignParentLeft="true" android:layout_marginRight="1px"
					android:layout_width="wrap_content" android:background="#99ffffff"
					android:layout_height="57dp" android:orientation="horizontal"
					android:gravity="center_vertical">
					<TextView android:id="@+id/textnickName" android:text=""
						android:textSize="18sp" android:textColor="#cc000000"
						android:layout_marginLeft="10dp" android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:singleLine="true" android:ems="4"/>
					<ImageView android:id="@+id/imgGender"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="10dp" 
						/>
					<TextView android:id="@+id/textPosition" 
						android:layout_marginLeft="10dp" android:textSize="14sp"
						android:textColor="#2f2d2d" android:layout_width="wrap_content"
						android:layout_height="wrap_content" />
				</LinearLayout>
			
			</RelativeLayout>
			
			<View android:layout_width="fill_parent" android:layout_height="1px"
				android:background="#cc9e9e9e" 							
				android:layout_alignBottom="@id/rlvcenterbar"	>
			</View>			

			<View android:layout_width="fill_parent" android:layout_height="0.5px"
				android:background="#ccffffff" android:layout_above="@id/rlvcenterbar">
			</View>
		</RelativeLayout>

	</LinearLayout>

