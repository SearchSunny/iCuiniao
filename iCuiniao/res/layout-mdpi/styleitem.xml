<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView android:id="@+id/styleitem_img"
			android:layout_width="95px" android:layout_height="95px"
			android:background="#00c9c9c9" android:layout_centerHorizontal="true">
		</ImageView>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@id/styleitem_img"
			android:layout_centerHorizontal="true" android:paddingTop="5dp">
			<TextView android:id="@+id/styleitem_str"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="14dp" android:textColor="#cc000000" android:text="">
			</TextView>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
