<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:paddingLeft="20dp"
	android:paddingRight="20dp">

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="5dp">
		<TextView android:id="@+id/price" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" android:textColor="#ffe7141a"
			android:textSize="17dp" android:textStyle="bold" android:text=""
			android:paddingLeft="85dp">
		</TextView>
		<LinearLayout android:id="@+id/llikebutton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:paddingRight="20dp"
			android:paddingLeft="20dp" android:gravity="center_vertical">

			<ImageView android:id="@+id/likebutton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/likebutton" android:layout_margin="5dp">
			</ImageView>

			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="5dp">
				<TextView android:id="@+id/likebuttontext"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="0" android:textSize="17dp" android:textColor="#ff7f7c7c"
					android:textStyle="normal">
				</TextView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/lformbutton"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/llikebutton" android:paddingRight="20dp"
			android:visibility="gone">
			<ImageView android:id="@+id/formbutton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/formbutton_0">
			</ImageView>
			<TextView android:id="@+id/formbuttontext"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="" android:textSize="16dp" android:textColor="#ff7f7c7c">
			</TextView>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout android:id="@+id/lcommoditybox"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/commodityinfoboxbg_default">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingTop="20dp"
			android:paddingLeft="10dp" android:paddingRight="10dp"
			android:paddingBottom="10dp">
			<TextView android:id="@+id/commodityinfoboxtext"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="" android:textColor="#cc000000" android:textSize="18dp"
				android:paddingBottom="10dp">
			</TextView>
			<TextView android:id="@+id/commodityinfoboxtime"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@id/commodityinfoboxtext"
				android:layout_alignParentLeft="true" android:text=""
				android:textSize="14dp" android:textColor="#ff7f7c7c">
			</TextView>
			<ImageView android:id="@+id/commodityinfoboxicon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@id/commodityinfoboxtext"
				android:layout_alignParentRight="true" android:background="@drawable/commenticon_c">
			</ImageView>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
